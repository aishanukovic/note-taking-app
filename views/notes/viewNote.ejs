<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Note</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/images/icon.ico" type="image/x-icon">
</head>
<body class="navbar-page">
    <%- include('../partials/navbar.ejs') %>

    <div class="container mt-5">
        <h1><%= note.title %></h1>
        <p><%= note.content %></p>
        <p><small>Created on: <%= note.createdAt ? new Date(note.createdAt).toLocaleString() : 'N/A' %></small></p>

        <a href="/notes/<%= note.id %>/edit" class="btn btn-warning">Edit Note</a>

        <button id="delete-note-btn" class="btn btn-danger" data-note-id="<%= note.id %>">Delete Note</button>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const deleteButton = document.getElementById('delete-note-btn');

            deleteButton.addEventListener('click', async () => {
                const noteId = deleteButton.dataset.noteId;
                const confirmDelete = confirm("Are you sure you want to delete this note?");

                if (!confirmDelete) return;

                try {
                    const response = await fetch(`/notes/${noteId}`, { method: 'DELETE' });

                    if (response.redirected) {
                        alert("Note deleted successfully");
                        window.location.href = '/notes';
                    } else {
                        const data = await response.json();
                        alert(data.message || 'Failed to delete note');
                    }
                } catch (error) {
                    console.error('Error deleting note:', error);
                    alert('An error occurred while deleting the note');
                }
            });
        });
    </script>
</body>
</html>