<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Noted.</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/style.css">
        <link rel="icon" href="/images/icon.ico" type="image/x-icon">
    </head>
    <body class="d-flex flex-column header-page bg-light">

        <%- include('partials/header.ejs') %>

        <div class="container d-flex flex-column justify-content-center align-items-center mt-5 py-5">
            <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Welcome! Keep your thoughts organized with the Noted. app.</h2>
                    <p class="card-text text-center mb-4">Sign in or register to get started.</p>

                    <% if (typeof user === 'undefined' || !user) { %>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/auth/login" class="btn btn-primary btn-lg px-4 py-2">Login</a>
                            <a href="/auth/register" class="btn btn-success btn-lg px-4 py-2">Register</a>
                        </div>
                    <% } else { %>
                        <div class="d-flex justify-content-center">
                            <a href="/user/homepage" class="btn btn-info btn-lg px-4 py-2">Go to Homepage</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <%- include('partials/footer.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>